{
  "name": "react-typescript-template",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:samatar26/react-typescript-template.git",
  "author": "Samatar",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "NODE_ENV=development webpack serve --hot --config webpack/webpack.config.ts",
    "build": "NODE_ENV=production webpack --config webpack/webpack.config.ts",
    "lint": "eslint .",
    "lint:quiet": "eslint . --quiet",
    "prettier:check": "prettier --check \"./src/**/*.{ts,tsx}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.5.0",
    "polished": "^4.1.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-query": "^3.9.8",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.2.0",
    "redux": "^4.0.5",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@babel/preset-env": "^7.12.16",
    "@babel/preset-react": "^7.12.13",
    "@babel/preset-typescript": "^7.12.16",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.4.3",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.30",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/react-redux": "^7.1.16",
    "@types/react-router-dom": "^5.1.7",
    "@types/styled-components": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "buffer": "^6.0.3",
    "eslint": "^7.20.0",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-jest-dom": "^3.6.5",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-testing-library": "^3.10.1",
    "fork-ts-checker-webpack-plugin": "^6.1.0",
    "html-webpack-plugin": "^5.1.0",
    "husky": "5",
    "import-sort-style-module": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": ">=10",
    "msw": "^0.26.2",
    "prettier": "^2.2.1",
    "prettier-plugin-import-sort": "^0.0.6",
    "react-refresh": "^0.9.0",
    "regenerator-runtime": "^0.13.7",
    "stream-browserify": "^3.0.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5",
    "util": "^0.12.3",
    "webpack": "^5.22.0",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2",
    "whatwg-fetch": "^3.6.1"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./test/setupTestsAfterEnv.js"
    ],
    "setupFiles": [
      "./test/jest.setup.js"
    ]
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,md}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js}": [
      "eslint --cache --fix",
      "jest --bail --findRelatedTests"
    ]
  },
  "importSort": {
    ".ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    },
    ".js": {
      "style": "module",
      "parser": "babylon"
    }
  }
}
