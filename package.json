{
  "name": "react-typescript-template",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:samatar26/react-typescript-template.git",
  "author": "Samatar",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "NODE_ENV=development webpack serve --hot --config webpack/webpack.config.ts",
    "build": "NODE_ENV=production webpack --config webpack/webpack.config.ts",
    "lint": "eslint .",
    "lint:quiet": "eslint . --quiet",
    "prettier:check": "prettier --check \"./src/**/*.{ts,tsx}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.6.1",
    "polished": "^4.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-query": "^3.19.1",
    "react-redux": "^7.2.4",
    "react-router-dom": "^5.2.0",
    "redux": "^4.1.0",
    "styled-components": "^5.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/preset-env": "^7.14.8",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.4.3",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.10",
    "@types/react": "^17.0.15",
    "@types/react-dom": "^17.0.9",
    "@types/react-redux": "^7.1.18",
    "@types/react-router-dom": "^5.1.8",
    "@types/styled-components": "^5.1.11",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "babel-jest": "^27.0.6",
    "babel-loader": "^8.2.2",
    "buffer": "^6.0.3",
    "eslint": "^7.31.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-jest-dom": "^3.9.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-testing-library": "^4.10.1",
    "fork-ts-checker-webpack-plugin": "^6.2.13",
    "html-webpack-plugin": "^5.3.2",
    "husky": "7",
    "import-sort-style-module": "^6.0.0",
    "jest": "^27.0.6",
    "lint-staged": ">=11",
    "msw": "^0.33.2",
    "prettier": "^2.3.2",
    "prettier-plugin-import-sort": "^0.0.7",
    "react-refresh": "^0.9.0",
    "regenerator-runtime": "^0.13.9",
    "stream-browserify": "^3.0.0",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5",
    "util": "^0.12.4",
    "webpack": "^5.47.1",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2",
    "whatwg-fetch": "^3.6.2"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./test/setupTestsAfterEnv.js"
    ],
    "setupFiles": [
      "./test/jest.setup.js"
    ]
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,md}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js}": [
      "eslint --cache --fix",
      "jest --bail --findRelatedTests"
    ]
  },
  "importSort": {
    ".ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    },
    ".js": {
      "style": "module",
      "parser": "babylon"
    }
  }
}
